<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="gridPane" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.Login.LoginView">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #EFEFEF;">
            <children>
                <Label prefWidth="315.0" text="使用者登入" textAlignment="JUSTIFY">
                    <font>
                        <Font name="Microsoft JhengHei Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER_LEFT" prefWidth="200.0">
                    <children>
                        <Label text="帳號：">
                            <HBox.margin>
                                <Insets right="15.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="accountInput" promptText="帳號" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets right="15.0" />
                            </HBox.margin></TextField>
                    </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefWidth="200.0">
                    <children>
                        <Label text="密碼：">
                            <HBox.margin>
                                <Insets right="15.0" />
                            </HBox.margin>
                        </Label>
                      <PasswordField fx:id="passwordInput" promptText="密碼" HBox.hgrow="ALWAYS">
                          <HBox.margin>
                              <Insets right="15.0" />
                          </HBox.margin>
                      </PasswordField>
                    </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
                </HBox>
            <Button fx:id="loginBtn" mnemonicParsing="false" text="登入" />
            </children>
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </GridPane.margin>
        </VBox>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>
